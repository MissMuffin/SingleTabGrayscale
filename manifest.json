{

    "manifest_version": 2,
    "version": "1.0",
    "author": "MissMuffin",
    "name": "Single tab grayscale",
    "description": "Change active tab to grayscale. Click the browser action icon again to revert back to original colors.",
    
    "icons": {
      "48": "icons/border-48.png"
    },

    "permissions": [
        "activeTab", "tabs"
    ],
    
    "browser_action": {
        "default_icon": "icons/border-32.png",
        "default_title": "Grayscale"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [ {
        "matches": ["<all_urls>"],
        "js": ["/content.js"]
    }]
  
  }